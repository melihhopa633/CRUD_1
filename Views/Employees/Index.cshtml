@model IEnumerable<test_proje_1.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<div id="PlaceHolderHere"></div>

<button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addEmployee" data-url="@Url.Action("Create")">Create</button>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addEmployee" data-url="@Url.Action($"Edit/{item.Id}")">Edit</button>
                    <button type="button" class="btn btn-primary" data-toggle="ajax-modal" data-target="#addEmployee" data-url="@Url.Action($"Delete/{item.Id}")">Delete</button>
      
                </td>
            </tr>
        }
    </tbody>
</table>


